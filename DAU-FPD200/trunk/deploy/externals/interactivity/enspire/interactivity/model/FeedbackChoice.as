import org.asapframework.util.*;import enspire.interactivity.model.*;import enspire.interactivity.events.*;import com.mosesSupposes.fuse.*;/*   Class: FeedbackChoice   Base class implementing the functionality needed for a basic FeedbackChoice.    */class enspire.interactivity.model.FeedbackChoice 	extends Choice		implements IChoice {		private var feedbackEnabled:Boolean;	private var showingFeedback:Boolean;		private var initBgHeight:Number;	private var initFeedbackSpacing:Number;		public function FeedbackChoice() {		super();		feedbackEnabled = false;		showingFeedback = false;		this["mcFeedback"]._visible = false;		this["mcBg"].mcCorrect._visible = false;		initFeedbackSpacing = this["mcFeedback"]._y - (this["mcText"]._y + this["mcText"]._height);	}		public function lockInInitHeight() {		initBgHeight = this["mcBg"]._height;	}		public function setFeedbackText(t:String) {		this["mcFeedback"].tf.autoSize = true;		this["mcFeedback"].tf.htmlText = t;	}		public function enableFeedback() {		feedbackEnabled = true;		chooseEnabled = false;	}		public function showFeedback() {		this["mcFeedback"]._visible = true;		this["mcFeedback"]._y = this["mcText"]._y + this["mcText"]._height + initFeedbackSpacing;		var newBgHeight = initBgHeight + this["mcFeedback"]._height;		ZigoEngine.doTween(this["mcBg"],"_height",newBgHeight,.5);		showingFeedback = true;	}		public function hideFeedback() {		this["mcFeedback"]._visible = false;		this["mcFeedback"]._y = this["mcText"]._y;		var newBgHeight = initBgHeight;		ZigoEngine.doTween(this["mcBg"],"_height",newBgHeight,.5);		showingFeedback = false;	}		public function getShowingFeedback() {		return showingFeedback;	}		public function showCorrect() {		this["mcBg"].mcCorrect._visible = true;	}		public function getHeight() {		if(this["mcFeedback"]._visible) {			return initBgHeight + this["mcFeedback"]._height;		}		return initBgHeight;	}		private function choicePress() {			}		private function choiceRelease() {		if(chooseEnabled) {			if(isSelected()) {				deselect();			} else {				select();			}		} else {			var ce = new ChoiceEvent(ChoiceEvent.CHOICE_FEEDBACK_CLICK,this);			notifyListeners(ce);		}	}		private function choiceOver() {			}		private function choiceOut() {	}	}